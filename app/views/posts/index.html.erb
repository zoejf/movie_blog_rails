<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>Quote It!</h1>
      <br>
       <% @posts.each do |post| %>
        <h4> <%= post.movie %> (<%= post.year %>)</h4>
        <p> "<%= post.quote %>" <%= link_to "View", post_path(post) %></p>
        <br>
       <% end %>
      <br>

      <% if current_user %>
        <%= link_to "Add Your Favorite Quote", new_post_path %>
      <% end %>
    </div>
  </div>
</div>

