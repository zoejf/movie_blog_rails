<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 panel panel-default">
      <div class="panel-body">
        <h1>Edit Quote</h1>
        <%= form_for @post do |f| %>
          <%= f.text_field :movie, placeholder: "Movie Title" %><br>
          <%= f.text_field :year, placeholder: "Year" %><br>
          <%= f.text_field :quote, placeholder: "Favorite Quote", size: "20x20" %><br>
          <br>
          <%= f.submit "Save" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
